NameVirtualHost *:80

<VirtualHost *:80>
	DocumentRoot /var/www
	ServerName <%= scope.lookupvar('::hostname') %>
	Alias /ganglia /var/www/ganglia-webfrontend
	<Directory "/var/www/ganglia-webfrontend">
	DirectoryIndex index.php
	Options FollowSymLinks
	AllowOverride All
	Order allow,deny
	Allow from all
	Deny from none
	</Directory>
        ErrorLog /var/log/apache2/error.log
        LogLevel warn
</VirtualHost>
