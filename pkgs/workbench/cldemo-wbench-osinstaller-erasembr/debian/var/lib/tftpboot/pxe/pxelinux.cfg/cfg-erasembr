default menu.c32
prompt 0
timeout 300
serial 0 115200 0

menu title Cumulus CW - Erase MBR Boot menu

label local
	menu label ^0 - Boot form first hard drive
	com32 chain.c32
	append hd0

label 1
	menu label ^1 - DANGER Erase MBR Records on Server DANGER
	menu default
	kernel erasembr/i386/linux
	append initrd=erasembr/i386/initrd.gz boot_debug=1 -- console=ttyS0,115200
