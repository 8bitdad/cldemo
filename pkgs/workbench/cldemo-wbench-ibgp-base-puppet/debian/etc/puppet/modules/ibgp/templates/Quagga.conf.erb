! This file is managed by Puppet
hostname zebra
log file /var/log/quagga/zebra.log
hostname ospfd
log file /var/log/quagga/ospfd.log
log timestamp precision 6
hostname bgpd
log file /var/log/quagga/bgpd.log
!
password cn321
enable password cn321
!
router-id <%= int_loopback %>
<% if @bgp -%>
router bgp <%= @bgp["my_asn"] %>
  bgp router-id <%= int_loopback %>
  bgp log-neightbour-changes
  <% if @int_bridges -%>
  <% int_bridges.each_pair do |bridge, options| -%>
  network <% options["address"] %>/<% options["netmask"] %>


interface eth0
 ipv6 nd suppress-ra
 link-detect
!
interface lo
 link-detect
!
<% if @int_unnumbered -%>
<% @int_unnumbered.each do |val| -%>
interface <%= val %>
 ip ospf network point-to-point
 ipv6 nd suppress-ra
 link-detect
!
<% end -%>
<% end -%>
router ospf
 ospf router-id <%= int_loopback %>
 redistribute connected
 network <%= int_loopback %>/32 area 0.0.0.0
!
ip forwarding
ipv6 forwarding
!
line vty
!
