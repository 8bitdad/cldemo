<VirtualHost *:80>
	ServerName <%= scope.lookupvar('::hostname') %>
	Alias /ganglia/ /usr/share/ganglia-webfrontend
	<Directory "/usr/share/ganglia-webfrontend">
	AllowOverride All
	Order allow,deny
	Allow from all
	Deny from none
	</Directory>
        ErrorLog /var/log/apache2/error.log
        LogLevel warn
</VirtualHost>
